# For example:
#   sudo dpkg-reconfigure -phigh xserver-xorg
Section "Files"
EndSection

#Section "Module"
#	Disable		"dbe"
#	Disable		"dri"
#	Disable		"glx"
#	Disable		"vbe"
#EndSection

Section "InputDevice"
	Identifier	"Generic Keyboard"
	Driver		"kbd"
	Option		"CoreKeyboard"
	Option		"XkbRules"	"xorg"
	Option		"XkbModel"	"pc104"
	Option		"XkbLayout"	"de"
	Option		"XkbOptions"	"ctrl:nocaps"
EndSection

#Section "InputDevice"
